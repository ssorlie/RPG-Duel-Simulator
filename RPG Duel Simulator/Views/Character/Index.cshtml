@model IEnumerable<Character>
@{
    ViewData["Title"] = "Index";
}

<partial name="_Notifications" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">List of Characters</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Character" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i> &nbsp; Create New Character
            </a>
        </div>
    </div>
    <br /><br />

<table class = "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Character ID
            </th>
            <th>
                Name
            </th>
            <th>
                Type 
            </th>
            <th>
                Level
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.CharacterId
                </td>
                <td width="40%">
                    @obj.CharacterName
                </td>
                <td width="40%">
                    @obj.CharacterType
                </td>
                <td width="5%">
                    @obj.Level
                </td>
                <td>
                    <div class="w-50 btn-group" role="group">
                        <a asp-controller="Character" asp-action="Details" asp-route-CharacterId="@obj.CharacterId" class="btn btn-secondary">Details</a>
                        <a asp-controller="Character" asp-action="Edit" asp-route-CharacterId="@obj.CharacterId" class="btn btn-secondary">Edit</a>
                        <a asp-controller="Character" asp-action="Delete" asp-route-CharacterId="@obj.CharacterId" class="btn btn-danger">Banish</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
